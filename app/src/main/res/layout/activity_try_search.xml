<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Try_search">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:gravity="center"
        android:layout_marginTop="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="請挑選偏好房屋內部資料"
            android:textSize="30dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/air"
        android:layout_below="@+id/title"
        android:layout_marginTop="10dp"
        android:background="@drawable/layout_border"
        >

        <TextView
            android:id="@+id/tv_air"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:text="冷氣機:"
            android:textSize="30dp" />

        <Spinner
            android:id="@+id/sp_air"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/tv_air"
            android:layout_toRightOf="@+id/tv_air"
            android:layout_marginLeft="5dp"
            android:entries="@array/air"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TV"
        android:layout_below="@+id/air"
        android:layout_marginTop="10dp"
        android:background="@drawable/layout_border"
        >

        <TextView
            android:id="@+id/tv_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="電視機:"
            android:textSize="30dp" />

        <Spinner
            android:id="@+id/sp_tv"
            android:layout_width="280dp"
            android:layout_height="47dp"
            android:layout_alignTop="@+id/tv_tv"
            android:layout_toRightOf="@+id/tv_tv"
            android:layout_marginLeft="5dp"
            android:entries="@array/tv"
            android:spinnerMode="dialog"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/refrig"
        android:layout_below="@+id/TV"
        android:layout_marginTop="10dp"
        android:background="@drawable/layout_border"
        >

        <TextView
            android:id="@+id/tv_refrig"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="電冰箱:"
            android:textSize="30dp" />

        <Spinner
            android:id="@+id/sp_refrig"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/tv_refrig"
            android:layout_toRightOf="@+id/tv_refrig"
            android:layout_marginLeft="5dp"
            android:entries="@array/refrig"
            android:spinnerMode="dialog"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wash"
        android:layout_below="@+id/refrig"
        android:layout_marginTop="10dp"
        android:background="@drawable/layout_border"
        >

        <TextView
            android:id="@+id/tv_wash"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="洗衣機:"
            android:textSize="30dp" />

        <Spinner
            android:id="@+id/sp_wash"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/tv_wash"
            android:layout_toRightOf="@+id/tv_wash"
            android:layout_marginLeft="5dp"
            android:entries="@array/wash"
            android:spinnerMode="dialog"
            />
    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hot"
                android:layout_below="@+id/wash"
                android:layout_marginTop="10dp"
                android:background="@drawable/layout_border"
                >

                <TextView
                    android:id="@+id/tv_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="熱水器:"
                    android:textSize="30dp" />

                <Spinner
                    android:id="@+id/sp_hot"
                    android:layout_width="280dp"
                    android:layout_height="48dp"
                    android:layout_alignTop="@+id/tv_wash"
                    android:layout_toRightOf="@+id/tv_wash"
                    android:layout_marginLeft="5dp"
                    android:entries="@array/hot"
                    android:spinnerMode="dialog"
                    />
            </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/net"
        android:layout_below="@+id/hot"
        android:layout_marginTop="10dp"
        android:background="@drawable/layout_border"
        >

        <TextView
            android:id="@+id/tv_net"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="網路:"
            android:textSize="30dp" />

        <Spinner
            android:id="@+id/sp_net"
            android:layout_width="280dp"
            android:layout_height="47dp"
            android:layout_alignTop="@+id/tv_wash"
            android:layout_toRightOf="@+id/tv_wash"
            android:layout_marginLeft="33dp"
            android:entries="@array/net"
            android:spinnerMode="dialog"
            />
    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/table"
                android:layout_below="@+id/net"
                android:layout_marginTop="10dp"
                android:background="@drawable/layout_border"
                >

                <TextView
                    android:id="@+id/tv_table"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="桌椅:"
                    android:textSize="30dp" />

                <Spinner
                    android:id="@+id/sp_table"
                    android:layout_width="280dp"
                    android:layout_height="47dp"
                    android:layout_alignTop="@+id/tv_wash"
                    android:layout_toRightOf="@+id/tv_wash"
                    android:layout_marginLeft="33dp"
                    android:entries="@array/table"
                    android:spinnerMode="dialog"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toilet"
                android:layout_below="@+id/table"
                android:layout_marginTop="10dp"
                android:background="@drawable/layout_border"
                >

                <TextView
                    android:id="@+id/tv_toilet"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="衛浴:"
                    android:textSize="30dp" />

                <Spinner
                    android:id="@+id/sp_toilet"
                    android:layout_width="280dp"
                    android:layout_height="48dp"
                    android:layout_alignTop="@+id/tv_wash"
                    android:layout_marginLeft="33dp"
                    android:layout_toRightOf="@+id/tv_wash"
                    android:entries="@array/toilet"
                    android:spinnerMode="dialog" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/keep"
                android:layout_below="@+id/toilet"
                android:layout_marginTop="20dp"

                android:gravity="center">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:id="@+id/keep_going"
                    android:text="繼續填寫"
                    android:textSize="25dp"
                    android:background="@drawable/button_shape4"

                    />

            </LinearLayout>


        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>